pipeline {
    agent { label 'agent1' }
     environment {
        SONAR_TOKEN = credentials('jenkins-sonar') // Define SonarQube token variable
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Maven') {
            steps {
                sh 'mvn --version'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withCredentials([string(credentialsId: 'jenkins-sonar', variable: 'SONAR_TOKEN')]) {
                    sh "mvn clean package sonar:sonar -Dsonar.host.url=http://172.29.86.231:9000/ -Dsonar.login=$SONAR_TOKEN"
                }
            }
        }
    }
}
