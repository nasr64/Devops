pipeline {
    agent any

    stages {
        stage('Maven Check') {
            steps {
                script {
                    // Check Maven version using the specified path
                    sh '/usr/bin/mvn --version'
                }
            }
        }
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Maven Version') {
            steps {
                // Check Maven version using the standard 'mvn' command
                sh 'mvn --version'
            }
        }
    }
}
